{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "json": {
            "()": "json_formatter.JSONFormatter"
        }
    },
    "handlers": {
        "httpd_service_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "json",
            "filename": "httpd_service_log.json",
            "maxBytes": 10485760,
            "backupCount": 3
        },
        "postgres_service_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "json",
            "filename": "postgres_service_log.json",
            "maxBytes": 10485760,
            "backupCount": 3
        },
        "rabbitmq_service_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "json",
            "filename": "rabbitmq_service_log.json",
            "maxBytes": 10485760,
            "backupCount": 3
        }
    },
    "loggers": {
        "httpd_service": {
            "handlers": [
                "httpd_service_handler"
            ],
            "level": "INFO"
        },
        "postgres_service": {
            "handlers": [
                "postgres_service_handler"
            ],
            "level": "INFO"
        },
        "rabbitmq_service": {
            "handlers": [
                "rabbitmq_service_handler"
            ],
            "level": "INFO"
        }
    }
}